apiVersion: v1
kind: Service
metadata:
  name: gzip
spec:
  selector:
    app: gzip
  ports:
  - protocol: "TCP"
    port: 8081
    targetPort: 8080
  type: LoadBalancer

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: gzip
spec:
  selector:
    matchLabels:
      app: gzip
  replicas: 2
  template:
    metadata:
      labels:
        app: gzip
    spec:
      containers:
      - name: gzip
        image: nusjzx/float-operation:latest
        ports:
        - containerPort: 8080
